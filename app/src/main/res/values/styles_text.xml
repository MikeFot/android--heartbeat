<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat" />

    <style name="AppTextAppearance.Header">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTextAppearance.Footnote">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTextView">
        <item name="android:textAppearance">@style/AppTextAppearance</item>
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>

    <style name="AppTextView.Header">
        <item name="android:textAppearance">@style/AppTextAppearance.Header</item>
    </style>

    <style name="AppTextView.Body">
        <item name="android:textAppearance">@style/AppTextAppearance.Body</item>
        <item name="android:lineSpacingExtra">@dimen/medium_line_spacing_extra</item>
    </style>

    <style name="AppTextView.Footnote">
        <item name="android:textAppearance">@style/AppTextAppearance.Footnote</item>
        <item name="android:lineSpacingExtra">@dimen/small_line_spacing_extra</item>
    </style>


</resources>